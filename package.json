{
  "name": "sonic-ws",
  "version": "1.0.0-beta.5",
  "description": "A bandwidth efficient websocket library",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "webpack": "webpack --mode production",
    "build_web": "rimraf ./html && tsc --target ES5 --module ES6 --outdir ./html src/ws/client/browser/ClientBrowser.ts && npm run webpack",
    "build_node": "rimraf ./dist && tsc -d",
    "build": "npm run build_node && npm run build_web",

    "test_web": "npm run build && node test-site/server.mjs",
    "test_node": "npm run build_node && node test.mjs",
    
    "publish": "npm run build && copy .\\bundled\\SonicWS_bundle.js .\\release\\SonicWS_bundle.js && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cutelittlelily/sonic-ws.git"
  },
  "bugs": {
    "url": "https://github.com/cutelittlelily/sonic-ws/issues"
  },
  "homepage": "https://github.com/cutelittlelily/sonic-ws#readme",
  "author": "lily",
  "license": "ISC",
  "dependencies": {
    "ws": "^8.18.2"
  },
  "devDependencies": {
    "@types/node": "^22.15.17",
    "@types/ws": "^8.18.1",
    "cpy-cli": "^5.0.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "undici": "^7.8.0",
    "undici-types": "^7.8.0",
    "webpack": "^5.99.8",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.1"
  }
}
